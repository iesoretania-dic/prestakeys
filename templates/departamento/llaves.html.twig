{% extends 'layout.html.twig' %}

{% block title %}Llaves de departamentos - {{ parent() }}{% endblock %}

{% block content %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item" aria-current="page"><a href="{{ path('principal') }}"><i class="fa fa-home"></i></a></li>
            <li class="breadcrumb-item" aria-current="page"><a href="{{ path('departamento_listar') }}">Departamentos</a></li>
            <li class="breadcrumb-item active" aria-current="page">{{ departamento }}</li>
        </ol>
    </nav>

    <h1>Listado de llaves de {{ departamento }}</h1>

    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th>Código</th>
                <th>Descripción</th>
                <th>Prestada a</th>
            </tr>
        </thead>
        <tbody>
            {% for llave in llaves %}
                <tr>
                    <td>{{ llave.codigo }}</td>
                    <td>{{ llave.descripcion }}</td>
                    <td>
                        {{ llave.prestadaA | default('Sin prestar') }}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('departamento_listar') }}" class="btn btn-info"><i class="fa fa-arrow-left"></i> Volver al listado de departamentos</a>
{% endblock %}